.course-management__nav-box
  %ul.course-management__nav-list
    %li{ class: dashboard_class_value(current_item) }
      = link_to 'Dashboard', management_course_path(course), class: 'course-management__dashboard-link'
    %li{ class: create_challenge_class_value(current_item) }
      = link_to new_course_challenge_path(course), class: 'course-management__new-challenge-link' do
        = image_tag 'slanting_pencil.svg', class: 'course-management__new-challege-icon'
        Create Challenge
    %li{ class: edit_course_class_value(current_item) }
      = link_to 'Edit Course', edit_course_path(course), class: 'course-management__course-edit-link'
.clearfix
